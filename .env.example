# .env.example - Copy to .env and fill in your values

# Binance Perpetual API
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# MEXC Perpetual API
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# Solana
SOLANA_PRIVATE_KEY=your_solana_private_key_base58_or_json_array

# Jupiter Ultra API (optional, defaults to mainnet)
JUPITER_API_URL=https://api.jup.ag/ultra/v1
JUPITER_API_KEY=your_jupiter_api_key_here

# OKX DEX API (for multi-chain swaps: BSC + Solana)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here

# BSC Wallet (optional, required for BSC swaps via OKX DEX)
BSC_PRIVATE_KEY=your_bsc_private_key_hex_format

# Note: CEX provider selection and exchange-specific symbols are configured in markets.json
# This allows different markets to use different exchanges (Binance, MEXC, etc.)
